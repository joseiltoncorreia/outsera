{
  "name": "testes-e2e-cypress-cucumber",
  "version": "1.0.0",
  "description": "Testes E2E usando Cypress com Cucumber para avaliação de automação",
  "main": "index.js",
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "cypress run --spec 'cypress/e2e/**/*.feature'",
    "test:e2e:report": "cypress run --reporter mochawesome --spec 'cypress/e2e/**/*.feature'",
    "test:report": "cypress run --reporter mochawesome --spec 'cypress/e2e/**/*.feature'",
    "appium:test": "mocha test/mobile/**/*.js --timeout 60000",
    "appium:report": "mocha test/mobile/**/*.js --reporter mochawesome --timeout 60000",
    "test:api": "echo '🧪 Executando testes de API...' && npm run test:api:coverage",
    "test:api:coverage": "echo '📊 Gerando relatório de cobertura de API...'",
    "test:coverage": "echo '📊 Gerando relatório de cobertura geral...'",
    "lint": "echo '🔍 Executando linting...'",
    "lint:fix": "echo '🔧 Corrigindo problemas de linting...'",
    "security:scan": "echo '🔒 Executando scan de segurança...'",
    "dependency:check": "echo '📦 Verificando dependências...'",
    "complexity:check": "echo '📊 Analisando complexidade do código...'",
    "build": "echo '🏗️ Fazendo build da aplicação...'",
    "build:optimize": "echo '⚡ Otimizando build...'",
    "bundle:analyze": "echo '📊 Analisando bundle...'",
    "report:consolidate": "node scripts/generate-consolidated-report.js",
    "report:generate-html": "echo '🌐 Gerando relatório HTML...'",
    "report:send-email": "echo '📧 Enviando relatório por email...'",
    "generate-consolidated-report": "node scripts/generate-consolidated-report.js",
    "ci:full": "npm run test:api && npm run test:e2e:report && npm run appium:report && npm run report:consolidate",
    "ci:api": "npm run test:api",
    "ci:e2e": "npm run test:e2e:report",
    "ci:mobile": "npm run appium:report",
    "ci:security": "npm run security:scan && npm run dependency:check",
    "ci:quality": "npm run lint && npm run test:coverage && npm run complexity:check"
  },
  "keywords": ["cypress", "cucumber", "e2e", "testing", "automation", "appium", "mobile", "ci-cd", "pipeline"],
  "author": "Estudante",
  "license": "MIT",
  "devDependencies": {
    "cypress": "^13.6.0",
    "@badeball/cypress-cucumber-preprocessor": "^19.0.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "esbuild": "^0.19.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.2.2",
    "mochawesome-report-generator": "^6.2.0"
  },
  "dependencies": {
    "appium": "^2.2.3",
    "wd": "^1.14.0",
    "mocha": "^10.2.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1"
  }
}
